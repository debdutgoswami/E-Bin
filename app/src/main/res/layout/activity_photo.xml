<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Photo"
    android:background="@drawable/qrbgscr">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:layout_below="@+id/logo"
        android:id="@+id/VisitedPhoto"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/Visited"
        android:layout_below="@id/VisitedPhoto"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Start Camera"
        android:layout_centerHorizontal="true"
        />
    <ProgressBar
        android:id="@+id/progressBarVisit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/UploadDone"
        android:layout_below="@id/Visited"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Visited"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />

</RelativeLayout>